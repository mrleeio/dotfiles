#!/bin/bash
# Update Homebrew, upgrade all packages, and run health checks

set -e

echo "===================================="
echo "Homebrew Update & Maintenance"
echo "===================================="
echo ""

# Check if Homebrew is installed
if ! command -v brew &> /dev/null; then
    echo "ERROR: Homebrew is not installed"
    echo "Install from: https://brew.sh"
    exit 1
fi

# Update Homebrew
echo "üì¶ Updating Homebrew..."
brew update

echo ""
echo "‚¨ÜÔ∏è  Upgrading installed packages..."
brew upgrade

echo ""
echo "üßπ Cleaning up old versions..."
brew cleanup

echo ""
echo "üè• Running health check..."
brew doctor || {
    echo ""
    echo "‚ö†Ô∏è  Some issues were found by brew doctor"
    echo "    Review the warnings above"
}

echo ""
echo "‚úì Homebrew maintenance complete!"
echo ""
echo "Summary:"
brew list --versions | wc -l | xargs -I {} echo "  {} packages installed"
