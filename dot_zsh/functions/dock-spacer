# Add a spacer to the macOS Dock
# Usage: dock-spacer [count]
# Without arguments: adds one spacer
# With argument: adds the specified number of spacers

dock-spacer() {
  local count=${1:-1}

  if ! [[ "$count" =~ ^[0-9]+$ ]]; then
    echo "Usage: dock-spacer [count]"
    echo "  count must be a positive integer (default: 1)"
    return 1
  fi

  for ((i=1; i<=count; i++)); do
    defaults write com.apple.dock persistent-apps -array-add '{"tile-type"="spacer-tile";}'
  done

  echo "Added $count spacer(s) to the Dock"
  killall Dock
}
