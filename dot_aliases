# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Ruby/Rails
alias migrate="bin/rails db:migrate db:rollback && bin/rails db:migrate db:test:prepare"
alias s="rspec"
alias be="bundle exec"
alias ber="bundle exec rubocop"

# Elixir
alias iex="iex -S mix"
alias mix="mix compile && mix"
alias mixup="mix deps.get && mix deps.update --all && mix deps.unlock --all && mix deps.get && mix local"
alias ex="elixir"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Project navigation
alias dev="cd $HOME/GitHub"
alias mdev="cd $HOME/GitHub/mrleeio"

# Vim
alias vimup="vim -u $HOME/.vimrc.bundles +PlugUpdate +PlugClean! +qa"

# Homebrew

alias brewup="brew update && brew upgrade && brew cleanup && brew doctor"

# Chezmoi
alias ch="chezmoi"

# Terraform
alias tf="terraform"

# Pulumi
alias pu="pulumi"

# OS X Sleep
alias zzz="pmset sleepnow"